{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ]
        },
        "test": {
            "dependsOn": [
                "build"
            ]
        },
        "package": {
            "dependsOn": [
                "^build",
                "^test"
            ]
        },
        "make": {
            "dependsOn": [
                "^build",
                "^test"
            ]
        }
    }
}